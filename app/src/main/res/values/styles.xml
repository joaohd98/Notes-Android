<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/colorSuccess</item>
        <item name="android:bottomRightRadius">15dp</item>
        <item name="android:bottomLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="android:topLeftRadius">15dp</item>
    </style>

</resources>
